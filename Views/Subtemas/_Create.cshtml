@model Models.Subtema
<h4>Agregar Subtema</h4>

@*<script src="~/JS/jquery.form.min.js"></script>*@
<script src="~/JS/AjaxCrud/ajaxSubtemas.js"></script>

@using (Html.BeginForm("Create","Subtemas",FormMethod.Post,new {id= "frm-alumno" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.TemaId)

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Nombre Del Subtema", new { @class = "control-label col-md-12" })
        <div class="col-md-12">
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control ControlPer" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="modal-footer">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</div>
}


    



<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
