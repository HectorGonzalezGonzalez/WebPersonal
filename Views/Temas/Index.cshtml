@model IEnumerable<Models.Tema>

@{
    ViewBag.Title = "Lista De Temas";
}
@Html.Partial("_Alert")
@Html.Partial("_modalPlantilla")


@*container*@
<section class="contenido">
    <section class="section_titulo">
        <div class="div_titulo">
            <h2>Lista de Temas</h2>
            <div class="divBuscar">
                <input type="text" placeholder="Buscar Tema"><input type="submit" value="Buscar">
            </div>
        </div>
        <div class="div_add">
            <button id="btnNuevo" type="button" class="btnAdd" data-toggle="modal" data-target="#myModal">
                <i class="fas fa-plus-circle"></i> Agregar Tema
            </button>
        </div>
    </section>
    <section class="seccion_contenido">
        @{
            int cont = 0;
        }
        <table class="table table-bordered table-striped" align="center">
            <thead class="thead-dark">
                <tr>
                    <th>NO.</th>
                    <th>TEMA</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    cont += 1;
                    <tr>
                        <td align="center">
                            <b>@cont.ToString("00")</b>
                        </td>
                        <td>
                            @Html.ActionLink(@item.Nombre, "Index", "Subtemas", new { idTema = item.Id }, null)
                        </td>
                        <td><a href="#myModal" class="btnEditar" data-toggle="modal" data-id="@item.Id"><i class="fas fa-edit"></i> Editar</a></td>
                        <td><a href="#myModal" class="btnEliminar" data-toggle="modal" data-id="@item.Id"><i class="fas fa-trash"></i> Eliminar</a></td>
                    </tr>
                }
            }
            else
            {
                <b>No hay registros</b>
            }
        </table>
    </section>
   



</section>
<script src="~/JS/modal/Tema.js"></script>
